{
  "expo": {
    "name": "AbiliLife",
    "slug": "abililife",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "abililife-app",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/icons/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.abililife.app",
      "icon": {
        "dark": "./assets/icons/ios-icon.png",
        "light": "./assets/icons/ios-icon.png"
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses your location to show maps."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icons/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.abililife.app",
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ],
      "edgeToEdgeEnabled": true,
      "config": {
        "googleMaps": {
          "apiKey": "ANDROID_GOOGLE_MAPS_API_KEY"
        }
      },
      "googleServicesFile": "./google-services.json"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/icons/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "AbiliLife needs access to your location to provide personalized features and services."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "AbiliLife accesses your photos to allow you to upload profile pictures and share images."
        }
      ],
      [
        "expo-web-browser",
        {
          "experimentalLauncherActivity": true
        }
      ],
      [
        "react-native-edge-to-edge",
        {
          "android": {
            "parentTheme": "Default",
            "enforceNavigationBarContrast": false
          }
        }
      ],
      [
        "expo-sensors",
        {
          "motionPermission": "Allow AbiliLife to access your device motion."
        }
      ],
      [
        "expo-notifications",
        // THESE COMMENTS WILL BE REMOVED ONCE ALL NOTIFICATION ICONS AND SOUNDS ARE ADDED
        {
          "icon": "./local/assets/notification_icon.png", // Tint color for the push notification image when it appears in the notification tray.
          "color": "#ffffff", // Tint color for the push notification image when it appears in the notification tray.
          "defaultChannel": "default", // Default channel for FCMv1 notifications.
          "sounds": [
            "./local/assets/notification_sound.wav",
            "./local/assets/notification_sound_other.wav"
          ], // Array of local paths to sound files (.wav recommended) that can be used as custom notification sounds. Sound will not be played when focus mode does not permit it or silent mode is on.
          "enableBackgroundRemoteNotifications": false // For iOS only
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "711d444c-e531-43b2-b77e-ba20ff2c69ef"
      }
    }
  }
}